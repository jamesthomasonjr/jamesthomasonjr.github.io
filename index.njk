<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  {% if main.title -%}
    <title>{{ main.title }}</title>
  {%- endif %}
  {% if main.description -%}
    <meta name="description" content="{{ main.description }}">
  {%- endif %}
  {% if main.author.name -%}
    <meta name="author" content="{{ main.author.name }}">
  {%- endif %}

  <link rel="stylesheet" href="/css/styles.css?v=1.0.3">
</head>
<body>
  <header>
  </header>

  <main class="main main--splash">

    {% if main.nav -%}
      <nav class="main__nav">
        <ul class="nav">
          {%- for title, url in main.nav %}
            <li class="nav__item">
              <a class="nav__link" href="{{ url }}">{{ title }}</a>
            </li>
          {%- endfor %}
        </ul>
      </nav>
    {% endif -%}

    {%- if main.author.name %}
      <section class="main__title">
        <h1>{{ main.author.name }}</h1>
        {% if main.author.titles -%}
          <h2>{{ main.author.titles | join }}</h2>
        {%- endif %}
      </section>
    {%- endif -%}

  </main>

  <footer>
  </footer>
</body>
</html>
